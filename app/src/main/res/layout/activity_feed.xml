<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:titleTextColor="@android:color/white"
        android:backgroundTint="#E9E91E63"
        android:background="#FFFFFF"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/icon_app"
            android:layout_marginEnd="120dp"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="10dp"
            android:id="@+id/ibMessages"
            android:src="@drawable/ic_message_tab"
            android:clickable="true"
            android:layout_marginLeft="50dp"
            android:layout_marginEnd="20dp"
            app:tint="@color/white"
            android:backgroundTint="#E9E91E63"
            android:background="#E9E91E63"/>



    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:id="@+id/bottom"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#E91E63"
        android:background="#E91E63">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/ibHome"
            android:clickable="false"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:padding="10dp"
            android:src="@drawable/ic_baseline_home_24"
            app:tint="@color/white"
            android:background="#E9E91E63"
            />
        <ImageButton
            android:id="@+id/ibCompose"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toEndOf="@+id/ibHome"
            android:layout_toStartOf="@+id/ibProfile"
            android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/ic_compose"
            android:clickable="true"
            app:tint="@color/white"
            android:background="#E9E91E63"
            android:textSize="18sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:padding="10dp"
            android:id="@+id/ibProfile"
            android:src="@drawable/ic_baseline_account_circle_24"
            android:layout_alignParentEnd="true"
            android:clickable="true"
            android:layout_marginEnd="20dp"
            app:tint="@color/white"
            android:backgroundTint="#E9E91E63"
            android:background="#E9E91E63"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:id="@+id/rvFeed"
        android:layout_above="@id/bottom"/>

</RelativeLayout>
